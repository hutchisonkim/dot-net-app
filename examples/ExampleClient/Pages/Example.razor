@page "/example"
@inject DotNetApp.Core.Abstractions.IHealthStatusProvider HealthStatusProvider

<h3>Example DI Page</h3>

<p>Health status from injected IHealthStatusProvider:</p>

@if (status is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p><strong>@status</strong></p>
}

@code {
    private string? status;

    protected override async Task OnInitializedAsync()
    {
        status = await HealthStatusProvider.FetchStatusAsync();
    }
}
