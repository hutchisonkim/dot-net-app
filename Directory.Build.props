<Project>
  <!-- Centralized versions for common test dependencies -->
  <ItemGroup Condition="'$(IsTestProject)' == 'true'">
    <!-- Example: Force consistent FluentAssertions / Moq versions across test projects if desired.
         Add PackageReference Update entries only for packages actually used across tests. -->
    <PackageReference Update="FluentAssertions" Version="6.12.0" />
    <PackageReference Update="Moq" Version="4.20.72" />
    <PackageReference Update="Microsoft.Playwright" Version="1.48.0" />
    <PackageReference Update="bunit" Version="1.27.15" />
  </ItemGroup>

  <!-- Treat all *Tests.csproj as test projects for conditional logic -->
  <PropertyGroup>
    <IsTestProject Condition="'$(MSBuildProjectName)' != '' and $(MSBuildProjectName.EndsWith('Tests'))">true</IsTestProject>
  </PropertyGroup>
</Project>
