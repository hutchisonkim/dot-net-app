<Project>
  <PropertyGroup>
    <!-- Enforce stricter defaults for production code (src/)
         Test projects in tests/ override these settings via tests/Directory.Build.props -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
  <Nullable>enable</Nullable>
    <!-- Speed up CI builds by disabling generation of assembly info where not needed -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <!-- Keep analyzers private to the build process
         Test projects in tests/ remove this via tests/Directory.Build.props -->
    <PackageReference Include="Roslynator.Analyzers" Version="4.5.0" PrivateAssets="All" />
  </ItemGroup>
</Project>
