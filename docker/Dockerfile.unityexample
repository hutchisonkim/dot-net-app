FROM nginx:alpine

# Copy placeholder (or real Unity WebGL) assets
COPY examples/UnityExampleClient/wwwroot/ /usr/share/nginx/html/

# Reuse existing proxy config to forward /api -> backend api container
COPY src/DotNetApp.Client/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
