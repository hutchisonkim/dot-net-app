FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
ENV ASPNETCORE_URLS="http://+:8080"
# Copy the published output into the runtime image. The build context MUST be the
# published output directory (contains DotNetApp.Api.dll and all deps).
COPY . .
EXPOSE 8080
ENTRYPOINT ["dotnet", "DotNetApp.Api.dll"]
