    {
      "label": "Chess: All Tests (sequence)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Chess: Unit Tests (Examples.Chess.Unit)",
        "Chess: Integration Tests (Examples.Chess.Integration)",
        "Chess: UI Tests (Examples.Chess.UI)",
