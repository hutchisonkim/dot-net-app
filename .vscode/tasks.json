{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Chess: Unit Tests (Examples.Chess.Unit)",
      "type": "process",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/tests/Examples.Chess.Unit/Examples.Chess.Unit.csproj",
        "-c",
        "Release"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
