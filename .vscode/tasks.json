        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
      "group": "test"
    },
    {
      "label": "Chess: UI Tests (Examples.Chess.UI)",
      "type": "process",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/tests/Examples.Chess.UI/Examples.Chess.UI.csproj",
        "-c",
