{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start GitHub self-hosted runner",
      "type": "shell",
      "detail": "Start runner via programmatic RunnerCli (uses GitHub.RunnerTasks)",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "tools/RunnerCli",
        "--",
        "start",
        "--repo",
        "${input:ownerRepo}",
        "--token",
        "${input:runnerToken}",
        "--url",
        "${input:githubUrl}"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "GITHUB_REPOSITORY": "${input:ownerRepo}",
          "GITHUB_TOKEN": "${input:runnerToken}",
          "GITHUB_URL": "${input:githubUrl}",
          "RUNNER_NAME": "self-hosted-runner-01",
          "RUNNER_LABELS": "self-hosted,Linux,X64"
        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Stop GitHub self-hosted runner",
      "type": "shell",
      "detail": "Stop runner via programmatic RunnerCli (uses GitHub.RunnerTasks)",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "tools/RunnerCli",
        "--",
        "stop"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "ownerRepo",
      "type": "promptString",
      "description": "Enter owner/repo",
      "default": "hutchisonkim/dot-net-app"
    },
    {
      "id": "runnerToken",
      "type": "promptString",
      "description": "Enter the GitHub runner registration token",
      "default": "",
      "password": true
    },
    {
      "id": "githubUrl",
      "type": "promptString",
      "description": "GitHub URL (use https://github.com or your enterprise URL)",
      "default": "https://github.com"
    }
  ]
}
